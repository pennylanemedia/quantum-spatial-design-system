# Shopify Configuration for Petersen Games
# Copy this file to .env.local and add your actual values

# Shopify Store Domain (without https://)
# Example: petersen-games.myshopify.com
NEXT_PUBLIC_SHOPIFY_STORE_DOMAIN=your-store-domain.myshopify.com

# Shopify Storefront Access Token
# Get this from your Shopify admin: Apps > Private apps > Create private app
# Make sure to enable Storefront API access
NEXT_PUBLIC_SHOPIFY_STOREFRONT_ACCESS_TOKEN=your_storefront_access_token_here

# Optional: Analytics and tracking
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=

# Optional: Other integrations
STRIPE_SECRET_KEY=
SENDGRID_API_KEY=